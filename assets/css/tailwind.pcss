.fade {
  &-enter-active,
  &-leave-active {
    transition: all .3s cubic-bezier(.55, 0, .1, 1);
  }

  &-enter,
  &-leave-active {
    opacity: 0;
  }
}

.layout, .page {
  &-enter-active,
  &-leave-active {
    transition: all .3s cubic-bezier(.55, 0, .1, 1);
  }

  &-enter,
  &-leave-active {
    opacity: 0;
  }
}

html, body {
  scroll-behavior: smooth;
  overflow-x: hidden;
}

body {
  @apply break-words text-lg;
  background-color: var(--bg);
  color: var(--text-normal);
  font-family: 'Merriweather Sans', sans-serif;

  &.light {
    --bg: theme('colors.gray.200');
    --text-normal: theme('colors.gray.700');
    --text-title: theme('colors.gray.700');
    --text-link: theme('colors.orange.500');
    --card-bg: theme('colors.white');
    --inline-code-bg: theme('colors.gray.300');
    --inline-code-border: theme('colors.gray.300');
    --inline-code-text: theme('colors.gray.700');
  }

  &.dark {
    --bg: theme('colors.gray.800');
    --text-normal: theme('colors.gray.300');
    --text-title: theme('colors.gray.200');
    --text-link: theme('colors.orange.400');
    --card-bg: theme('colors.gray.700');
    --inline-code-bg: theme('colors.gray.900');
    --inline-code-border: theme('colors.gray.800');
    --inline-code-text: theme('colors.gray.300');
  }
}

a {
  @apply underline;
  color: var(--text-link);

  &:hover {
    @apply no-underline;
  }
}

hr {
  @apply h-px mb-8;
  background-color: var(--text-normal);
  border: none;
}

h1, h2, h3, h4, h5, h6 {
  @apply leading-relaxed mt-12 mb-5 font-semibold;
  font-family: 'Bitter', serif;
}

h1 + h2,
h2 + h3,
h3 + h4,
h5 + h6 {
  @apply mt-5;
}

h1 {
  @apply text-2xl;
}

h2 {
  @apply text-xl;
}

h3 {
  @apply text-lg;
}

h4 {
  @apply text-base;
}

h5 {
  @apply text-sm;
}

h6 {
  @apply text-xs;
}

:not(pre) > code {
  @apply text-left whitespace-pre py-1 px-2 rounded border inline;
  background-color: var(--inline-code-bg);
  border-color: var(--inline-code-border);
  color: var(--inline-code-text);
  hyphens: none;
}

pre > code {
  @apply rounded;
  cursor: text;
}

blockquote,
ol,
p,
ul,
pre {
  @apply leading-relaxed mb-8;
}

ul {
  @apply list-disc;
}

ol {
  @apply list-decimal;
}

ul, ol {
  @apply list-inside;
  li {
    @apply mb-3;

    ul, ol {
      @apply mb-3;
    }
  }
}

blockquote,
quote {
  @apply leading-relaxed mb-8 py-3 px-4 border-l border-l-4 italic;
  border-color: var(--inline-code-border);

  p:only-child {
    @apply mb-0;
  }
}

* {
  transition: transform 0.3s cubic-bezier(0.55, 0, 0.1, 1),
    background-color 0.3s cubic-bezier(0.55, 0, 0.1, 1),
    box-shadow 0.6s cubic-bezier(0.55, 0, 0.1, 1);
}
